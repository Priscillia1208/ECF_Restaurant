{% extends 'base.html.twig' %}

{% block title %}Formule index{% endblock %}

{% block body %}
    <h1>Formule index</h1>
    <a href="{{ path('app_admin_formule_new') }}">Créer</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.id }}</td>
                <td>{{ formule.nom }}</td>
                <td>{{ formule.prix }}</td>
                <td>{{ formule.description }}</td>
                <td>
                    <a href="{{ path('app_admin_formule_show', {'id': formule.id}) }}">Résumé</a>
                    <a href="{{ path('app_admin_formule_edit', {'id': formule.id}) }}">Modifier</a>
                    {{ include('admin_formule/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
