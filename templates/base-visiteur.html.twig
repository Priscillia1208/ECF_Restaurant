<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Le Quai Antique{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    {% block css %}{% endblock %}

    <link rel="stylesheet" href="{{ asset('css/style-original.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hind+Madurai:wght@300&family=Lora&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>


</head>

<body>
<!----------------CREATION DU HEADER ET DE LA NAVBAR-------------->

<header>

    <nav class="navigation">
        <img src="{{ asset('img/logo.png') }}" class="logo" alt="logo restaurant" >
        <div class="lien-navigation flex-item">
            <a href="{{ path('app_homepage') }}">Accueil</a>
            <a href="{{ path('app_carte')}}">Carte</a>
        </div>
        <a href="#" class="lien-navigation btn-reservation">Réservation</a>
        <div class="lien-navigation flex-item">
            <a href="{{ path('app_login') }}">Connexion</a>
            <a href="{{ path('app_register') }}">Creation compte client</a>
        </div>
    </nav>
</header>


<!----------------CONTENU-------------->
{% block body %}


{% endblock %}

<!----------------FOOTER------------->

<footer>
    <div class="footer">
        <div class="titre-horaires">
            <h2 >Nos horaires d'ouverture: </h2>
        </div>
        <div>
            <ul class="liste-horaires">
                {% for horaire in horaires %}
                <li>{{ horaire.jourSemaine ~ ' : '}}</li>
                {% endfor %}

            </ul>
        </div>

    </div>
</footer>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>
