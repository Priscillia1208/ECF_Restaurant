{% extends 'base-visiteur.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}

    <!----------------SECTION CARTE-------------->

    <div class="container-carte-menu">
        <section class="section-carte">
            <div class="item1">
                <ul>
                    <li><h3>Entrées</h3></li>
                    {% for entree in entrees %}
                    <li>{{ entree.nom ~ ' : ' ~ entree.prix ~ ' €' }}</li>
                    <li class="description-plat">{{ entree.description }}</li>
                    {% endfor %}
                </ul>
            </div>


            <div class="item2">
                <ul>
                    <li><h3>Plats</h3></li>
                    {% for plat in plats %}
                    <li>{{ plat.nom ~ ' : ' ~ plat.prix ~ ' €'}}</li>
                    <li class="description-plat">{{ plat.description }}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="item3">
                <ul>
                    <li><h3>Desserts</h3></li>
                    {% for dessert in desserts %}
                    <li>{{ dessert.nom ~ ' : ' ~ dessert.prix ~ ' €'}}</li>
                    <li class="description-plat">{{ dessert.description }}</li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>

    <!----------------SECTION MENUS-------------->


    <div class="container-carte-menu">
        <section class="section-menu">
            {% for formule in formules %}
            <div class="item1">
                <ul>
                    <li class="choix-menu"><h3>{{ formule.nom }}</h3></li>
                    <li>{{ formule.prix ~ ' €'}}</li>
                    <li>{{ formule.description}}</li>
                </ul>
            </div>
            {% endfor %}
        </section>
    </div>
{% endblock %}